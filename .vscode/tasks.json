{
    "version": "2.0.0",
    "tasks": [
        {
          "label": "Create build dir",
          "type": "shell",
          "command": "mkdir -Force .exe"
        },
        {
          "label": "Run qmake",
          "type": "shell",
          "command": "qmake",
          "args": [
            "../QnyDesk.pro"
          ],
          "options": {
            "cwd": ".exe"
          }
        },
        {
          "label": "Run make",
          "type": "shell",
          "command": "make",
          "args": [
            "-f",
            "Makefile.Debug"
          ],
          "options": {
            "cwd": ".exe"
          }
        },
        //   {
