{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Create build dir",
      "type": "shell",
      "command": "mkdir -Force .exe"
    },
    {
      "label": "Run qmake",
      "type": "shell",
      "command": "qmake",
      "args": [
        "${workspaceFolder}/client/${workspaceRootFolderName}.pro",
        "-spec",
        "win32-g++",
        "'CONFIG+=debug'",
        "'CONFIG+=qml_debug'"
      ],
      "options": {
        "cwd": ".exe"
      }
    },
    {
      "label": "Run make",
      "type": "shell",
      "command": "make",
      "args": [
        "-j8"
      ],
      "options": {
        "cwd": ".exe"
      }
    },
    //   {
    //     "label": "Clear build folder",
    //     "type": "shell",
    //     "command": "jom clean",
    //     "options": {
    //       "cwd": "./.exe/debug"
    //     }
    //   },
    {
      "label": "Build",
      "dependsOn": [
        "Create build dir",
        "Run qmake",
        "Run make"
      ],
      "dependsOrder": "sequence"
    }
  ]
}
