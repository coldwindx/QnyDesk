        //     "command": "jom clean",
        //     "options": {
        //       "cwd": "./.exe/debug"
        //     }
        //   },
          {
            "label": "Build",
            "dependsOn": [
              "Create build dir",
              "Run qmake",
              "Run make"
            ],
            "dependsOrder": "sequence"
          },
